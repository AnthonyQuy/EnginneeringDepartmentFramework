{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "moduleResolution": "Node16",
    "target": "ES2022",
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "removeComments": false,
    "strictFunctionTypes": false
  },
  "exclude": ["node_modules"]
}
